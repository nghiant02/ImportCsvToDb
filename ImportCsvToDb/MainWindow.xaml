<Window x:Class="ImportCsvToDb.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImportCsvToDb"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtFile" HorizontalAlignment="Left" Margin="185,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="156" Height="28" />
        <Button x:Name="btnBrowse" Content="..." HorizontalAlignment="Left" Margin="400,60,0,0" VerticalAlignment="Top" Width="46" Click="BtnBrowse_Click"/>
        <Button x:Name="btnImport" Content="Import" HorizontalAlignment="Left" Margin="480,60,0,0" VerticalAlignment="Top" Click="BtnImport_Click"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="548,60,0,0" VerticalAlignment="Top" Click="BtnClear_Click"/>
        <DataGrid x:Name="dgScores" Margin="0,134,0,0"/>
    </Grid>
</Window>
